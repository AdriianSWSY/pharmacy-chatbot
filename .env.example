# AI Agent Call Assistant - Environment Configuration Template
# Copy this file to .env and customize for your environment

# Environment (development/staging/production)
ENVIRONMENT=development

# Application Settings
APP_NAME=AI Agent Call Assistant API
DEBUG=true

# Server Configuration (using nested format)
SERVER__HOST=0.0.0.0
SERVER__PORT=8000
SERVER__LOG_LEVEL=debug

# Pharmacy API Configuration (using nested format)
PHARMACY_API__BASE_URL=https://url.com
PHARMACY_API__TIMEOUT=30
PHARMACY_API__RETRY_COUNT=3
PHARMACY_API__RETRY_DELAY=1.0

# Alternative: JSON format for complex nested structures
# SERVER={"host": "0.0.0.0", "port": 8000, "log_level": "debug"}
# PHARMACY_API={"base_url": "https://67e14fb758cc6bf785254550.mockapi.io", "timeout": 30, "retry_count": 3, "retry_delay": 1.0}
# CACHE={"ttl": 300}

